@using DAL.Entities
@model Category
@{
    ViewData["Title"] = "Delete";
}

<h4 style="text-align:center;background-color:ghostwhite">Delete Category @Model.Name</h4>

<form class="form" asp-action="Delete">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <input asp-for="Description" class="form-control" readonly />
    </div>
    <br />
    <button type="submit" class="btn btn-danger">Delete</button>
    <button asp-action="Index" class="btn btn-secondary">Back</button>
</form>


